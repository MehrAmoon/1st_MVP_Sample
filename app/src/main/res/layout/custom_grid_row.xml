<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:descendantFocusability="blocksDescendants"
             android:orientation="horizontal"
    android:background="@drawable/home_grid_borders">

    <com.etsy.android.grid.util.DynamicHeightImageView
        android:id="@+id/GridImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
      android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GridCost"
        android:text="7000 تومن"
        android:gravity="right|bottom"
        android:layout_marginTop="25dp"
        android:layout_margin="5dp"
        android:textColor="@color/cost"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/GridImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GridDiscount"
        android:textColor="@color/gray"
        android:gravity="right|bottom"
        android:layout_marginBottom="15dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:text="10000 تومن"
        android:layout_below="@+id/GridCost"/>

<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/fav"
   android:layout_below="@id/GridImage"
    android:layout_margin="5dp"
    />

</RelativeLayout>